<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".joinbuttonpage">

    //아이디(필수입력)
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
             />
        <EditText
            android:id="@+id/joinid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="5"
            android:hint="아이디"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="*"
            android:textColor="#ff0000"
            android:layout_marginRight="5dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/joinid_checked"
            android:text="중복확인"
            android:textSize="15dp"
            />
    </LinearLayout>
    //비밀번호(필수입력)
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginRight="5dp"/>
        <EditText
            android:id="@+id/joinpw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:hint="비밀번호"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="*"
            android:textColor="#ff0000"
            />
    </LinearLayout>
    //비밀번호 확인
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="재확인"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginRight="20dp"/>

        <EditText
            android:id="@+id/joinpw_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:hint="비밀번호 확인"
            android:textSize="20dp" />
    </LinearLayout>
    //비밀번호 확인 메세지
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/pw_check_msg"
        android:textSize="8dp"
        android:textColor="#ff0000"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="5dp"
        />
    //이름(필수입력), 성별

    <LinearLayout
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="이름"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:hint="이름"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="#ff0000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="성별"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/change_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ems="5"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/show_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="0dp" />
    </LinearLayout>
   //생년월일
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="생년월일"
            android:layout_marginRight="5dp"/>
        <EditText
            android:id="@+id/birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:hint="MM/DD/YY"
            android:textSize="20dp"/>
    </LinearLayout>
    //전화번호
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="전화번호"
            android:layout_marginRight="5dp"/>
        <EditText
            android:id="@+id/call_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:textSize="20dp"
            android:hint=" - 빼고 입력"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="*"
            android:textColor="#ff0000"
            />
    </LinearLayout>
    //회원유형 선택
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="회원유형"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/code_trainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="트레이너"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/code_non"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="해당 없음"
            android:layout_marginRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="*"
            android:textColor="#ff0000"
            />
    </LinearLayout>
    <Button
        android:id="@+id/go_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입 하기"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"/>


</LinearLayout>